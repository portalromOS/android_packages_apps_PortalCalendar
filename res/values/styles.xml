<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status bar color.-->
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceStatusBarContrast">@color/text</item>
        <item name="android:colorPrimary">@color/highLight</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
        <item name="android:timePickerDialogTheme">@style/CustomTimePickerDialog</item>
        <item name="android:spinnerStyle">@style/FormInput</item>


        <!--Customize your theme here. -->
    </style>


    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/ff_monserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>

    </style>

    <style name="Cards">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MainHeaderTitle">
        <item name="android:fontFamily">@font/ff_monserrat_bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MainHeaderSubtitle">
        <item name="android:fontFamily">@font/ff_montserrat_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableHeader">
        <item name="android:fontFamily">@font/ff_monserrat_bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FormInput">
        <item name="android:fontFamily">@font/ff_monserrat_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FormInputSpinner"  parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/ff_monserrat_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@color/bg</item>
    </style>
    <style name="FormInputPicker" parent="FormInput">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="FormInlineLabel">
        <item name="android:fontFamily">@font/ff_monserrat_light</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingHorizontal">5pt</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="CustomPickerDialog"  parent="Theme.AppCompat.Light.Dialog">
        <item name="cornerSize">16dp</item>
        <item name="android:headerBackground">@color/highLight</item>
        <item name="colorAccent">@color/highLight</item>

        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:editTextColor">@color/highLight</item>
        <item name="android:textColorHint">@color/textSecundary</item><!-- Placeholder -->
    </style>

    <style name="CustomDatePickerDialog"  parent="CustomPickerDialog">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/textSecundary</item>
    </style>

    <style name="CustomTimePickerDialog"  parent="CustomPickerDialog">
         <item name="colorBackgroundFloating">@color/highLight</item><!-- Dialog background color -->
        <item name="colorControlHighlight">@color/highLight</item><!-- Hover ao clicar num botao -->

        <item name="android:numberPickerStyle">@color/debug</item>


    </style>

    <style name="Switch" parent="Theme.AppCompat">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/buttonLight</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>

</resources>